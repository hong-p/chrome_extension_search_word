{
    "name": "Search Word",
    "description": "Search word",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "https://www.google.com/",
        "https://www.google.co.kr/",
        "https://chrome.google.com/*"
    ]
  }
